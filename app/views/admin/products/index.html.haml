:scss
  .desc{
    width: 150px;
    overflow: hidden;
  }
%h1 Список продуктів
= link_to 'Створити продукт', new_admin_product_path, class: 'btn btn-primary'
.table-responsive
  %table.table.table-hover.text-center.custom-table
    %thead
      %tr
        %th Назва
        %th Вік
        %th Призначення
        %th Час використання
        %th Класифікація
        %th Вироблено в
        %th Об'єм
        %th Опис
        %th Стать
        %th Зображення
        %th
        %th
        %th

    %tbody
      - @admin_products.each do |admin_product|
        %tr
          %td= admin_product.title
          %td= admin_product.age
          %td= admin_product.appointment
          %td= admin_product.application_time
          %td= admin_product.classification
          %td= admin_product.made_in
          %td= admin_product.volume
          %td.desc= admin_product.desc[0..30]
          %td= admin_product.sex
          %td= image_tag(admin_product.img.thumb)
          .actions
            %td
              = link_to admin_product do
                %i.fa.fa-eye.fa-2x{"aria-hidden" => "true"}
            %td
              = link_to edit_admin_product_path(admin_product) do
                %i.fa.fa-pencil.fa-2x{"aria-hidden" => "true"}
            %td
              = link_to admin_product, :method => :delete, :data => { :confirm => 'Are you sure?' } do
                %i.fa.fa-trash.fa-2x{"aria-hidden" => "true"}


%br


